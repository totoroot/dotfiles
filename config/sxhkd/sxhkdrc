## Volume Control ##

ctrl + alt + Return
	pulsemixer --toggle-mute
	
crtl + alt + [
	pulsemixer --change-volume -"10" --unmute
	
crtl + alt + ]
	pulsemixer --change-volume +"10" --unmute

## Media Control ##

ctrl + alt + space
	playerctl play-pause
	
ctrl + alt + Right
	playerctl next
	
ctrl + alt + Left
	playerctl previous

## Rofi ##

alt + space
	$DOTFILES/bin/rofi/appmenu

alt + Tab
	$DOTFILES/bin/rofi/windowmenu

alt + backslash
	$DOTFILES/bin/rofi/passmenu

alt + slash
	$DOTFILES/bin/rofi/filemenu -x

alt + Return
	$DOTFILES/bin/rofi/powermenu -x

## Custom ##

ctrl + space
    $DOTFILES/bin/keymapswitcher

super + p
    polybar-msg cmd toggle

super + g
    if [[ $(bspc config -d focused window_gap) -eq 150 ]]; then bspc config -d focused window_gap 10; else bspc config -d focused window_gap 150; fi

## Other ##
	
super + alt + p
	bspc config focus_follows_pointer {true,false}

super + {_,shift + }q
	bspc node -{c,k}

super + t
	bspc desktop -l next

super + a
	bspc window -s last

## Toggle floating/fullscreen
super + {_,ctrl + }f
	bspc node -t ~{floating,fullscreen}

super + {_,ctrl +}{h,j,k,l}
	$DOTFILES/bin/bspwm/focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	$DOTFILES/bin/bspwm/swap {_,-m }{west,south,north,east}

## Resize by preselection
super + alt + {1-9}
    bspc {desktop -f,node -d} {1-9,10};

super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# super + alt + Return
	# $DOTFILES/bin/bspwm/subtract-presel

# expand a window by moving one of its side outward
super + {Left,Down,Up,Right}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# contract a window by moving one of its side inward
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# screenshot region
super + s
	scrcap

